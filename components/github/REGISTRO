<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Alimentos</title>
</head>
<body>
    <h1>Registro de Alimentos</h1>

    <!-- Formulário de registro de alimentos -->
    <form id="foodRegistrationForm">
        <label for="nomeAlimento">Nome do Alimento:</label>
        <input type="text" id="nomeAlimento" required><br>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" rows="4" required></textarea><br>

        <label for="quantidade">Quantidade:</label>
        <input type="number" id="quantidade" required><br>

        <button type="submit">Registrar Alimento</button>
    </form>

    <!-- Lista de alimentos registrados -->
    <h2>Alimentos Registrados</h2>
    <ul id="foodList"></ul>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('foodRegistrationForm');
            const foodList = document.getElementById('foodList');

            form.addEventListener('submit', function (e) {
                e.preventDefault();

                const nomeAlimento = document.getElementById('nomeAlimento').value;
                const descricao = document.getElementById('descricao').value;
                const quantidade = document.getElementById('quantidade').value;

                const listItem = document.createElement('li');
                listItem.innerHTML = `<strong>${nomeAlimento}</strong> - ${descricao}, Quantidade: ${quantidade}`;
                foodList.appendChild(listItem);

                // Limpa o formulário após o registro
                form.reset();
            });
        });
    </script>
</body>
</html>
